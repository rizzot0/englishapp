<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.englishapp.MemoryGameController"
      spacing="10" alignment="CENTER"
      style="-fx-padding: 20; -fx-background-color: #f0f8ff;"
      stylesheets="@style.css">

    <Label fx:id="scoreLabel" text="Puntaje: 0" style="-fx-font-size: 18px;" />

    <GridPane fx:id="cardGrid"
              hgap="10" vgap="10"
              alignment="CENTER" />

    <Button fx:id="restartButton"
            text="Reiniciar juego"
            onAction="#restartGame"
            style="-fx-font-size: 14px;"
            visible="false"/>
</VBox>
