<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.englishapp.MathGameController"
      spacing="20"
      alignment="CENTER"
      prefWidth="480" prefHeight="400"
      stylesheets="@style.css"
      styleClass="math-game-root">

    <Label fx:id="timerLabel" text="Time: 60" styleClass="timer-label"/>
    <Label fx:id="scoreLabel" text="Score: 0" styleClass="score-label"/>
    <Label fx:id="operationLabel" text="Operation" styleClass="operation-label"/>
    
    <HBox fx:id="optionsBox" spacing="15" alignment="CENTER" styleClass="options-box"/>
    
    <Label fx:id="feedbackLabel" text="" styleClass="feedback-label"/>
    
    <Button fx:id="restartButton" text="Restart" onAction="#restartGame"
            visible="false" styleClass="button"/>
</VBox>
