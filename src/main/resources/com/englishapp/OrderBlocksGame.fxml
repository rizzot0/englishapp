<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.englishapp.OrderBlocksGameController"
            prefWidth="400" prefHeight="500"
            stylesheets="@style.css">

    <center>
    <ScrollPane fitToWidth="true" fitToHeight="true" BorderPane.alignment="CENTER">
        <content>
            <StackPane alignment="CENTER">
                <VBox fx:id="container" alignment="CENTER" spacing="10" />
            </StackPane>
        </content>
    </ScrollPane>
</center>


    <bottom>
        <HBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Verify Order" onAction="#checkOrder"/>
            <Button text="Restart Game" onAction="#restartGame"/>
        </HBox>
    </bottom>

</BorderPane>
