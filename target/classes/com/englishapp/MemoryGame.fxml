<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.englishapp.MemoryGameController"
      spacing="10"
      alignment="CENTER"
      stylesheets="@style.css"
      styleClass="memory-game-root">

    <Label fx:id="scoreLabel" text="Puntaje: 0" styleClass="score-label"/>

    <GridPane fx:id="cardGrid"
              hgap="10" vgap="10"
              alignment="CENTER"
              styleClass="memory-grid"/>

    <Button fx:id="restartButton"
            text="Reiniciar juego"
            onAction="#restartGame"
            visible="false"
            styleClass="button"/>
</VBox>
