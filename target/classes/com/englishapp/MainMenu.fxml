<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.englishapp.MainMenuController"
      alignment="CENTER" spacing="15"
      stylesheets="@stylesMainMenu.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Button text="🗓️ Ordenar los días de la semana" onAction="#openOrderBlocksGame" prefWidth="300"/>
    <Button text="⌨️ Batalla de tipeo" onAction="#openTypingGame" prefWidth="300"/>
    <Button text="🔤 Juego de deletreo" onAction="#openSpellingGame" prefWidth="300"/>
    <Button text="➕ Juego de matemáticas" onAction="#openMathGame" prefWidth="300"/>

</VBox>
