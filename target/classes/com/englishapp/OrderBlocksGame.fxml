<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.englishapp.OrderBlocksGameController"
            prefWidth="400" prefHeight="500">

    <center>
        <ScrollPane fitToWidth="true" BorderPane.alignment="CENTER">
            <content>
                <VBox fx:id="container" alignment="TOP_CENTER" spacing="10" prefHeight="400" />
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Verify Order" onAction="#checkOrder"/>
            <Button text="Restart Game" onAction="#restartGame"/>
        </HBox>
    </bottom>

</BorderPane>
